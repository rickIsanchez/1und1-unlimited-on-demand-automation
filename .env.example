# 1&1 Control Center Zugangsdaten
# Kopiere diese Datei zu .env und fülle die Werte aus

# Anmeldedaten (entweder Benutzername und Passwort ODER Gast-Link verwenden)
CONTROL_CENTER_USERNAME=deine.email@beispiel.de
CONTROL_CENTER_PASSWORD=dein_passwort

# Alternativ: Gast-Link für den Zugriff ohne Anmeldedaten
# Beispiel: https://www.1und1.de/mc/tsxI7HY4j_
GUEST_URL=

# Vertrags-ID(s)
# Mehrere Vertrags-IDs können mit Komma getrennt werden
CONTROL_CENTER_CONTRACT_IDS=123456789

# API-Einstellungen
# Timeout in Sekunden
API_TIMEOUT=30 

# Monitor-Einstellungen
# Schwellenwert in GB, bei dem das Highspeed-Volumen erhöht wird
MONITOR_THRESHOLD_GB=1.0
# Prüfintervall in Sekunden
MONITOR_CHECK_INTERVAL_SECONDS=60
# Schnelleres Prüfintervall in Sekunden, wenn der Schwellenwert unterschritten wird
MONITOR_FAST_CHECK_INTERVAL_SECONDS=5
# Maximales Prüfintervall in Sekunden (5 Minuten)
MONITOR_MAX_CHECK_INTERVAL_SECONDS=300
# Ob das Prüfintervall dynamisch basierend auf der Verbrauchsrate berechnet werden soll (true/false)
MONITOR_DYNAMIC_INTERVAL=true
# Initiales Intervall in Sekunden für die dynamische Berechnung (1 Minute)
MONITOR_INITIAL_DYNAMIC_INTERVAL_SECONDS=60
# Anzahl der Stunden, für die Logs aufbewahrt werden sollen
MONITOR_LOG_RETENTION_HOURS=12

# Logger-Einstellungen
# Ob farbige Logs verwendet werden sollen (true/false)
# Für bessere Kompatibilität mit Ubuntu Cockpit auf false setzen
LOGGER_USE_COLORS=false